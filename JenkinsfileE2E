pipeline {
    agent any

     environment {
            ENV_CYPRESS_USERNAME = credentials('ENV_CYPRESS_USERNAME')
            ENV_CYPRESS_PASSWORD = credentials('ENV_CYPRESS_PASSWORD')
        }

    tools { nodejs "nodejs" }

    stages {
        stage('NPM Install'){
            steps{
                sh 'npm install'
            }
        }

        stage('End-to-End Testing'){
            steps{
                sh 'npm run e2e -- -e xAct_username=${ENV_CYPRESS_USERNAME},xAct_password=${ENV_CYPRESS_PASSWORD}'
            }
        }
        stage('Merge & Create Final Report'){
                    steps{
                         sh 'mochawesome-merge ./mochawesome-report/*.json -o ./mochawesome-report/output.json'
                         sh 'marge  ./mochawesome-report/output.json --reportDir ./mochawesome-report/ --inline'
                    }
                }
    }
     post {
            always {
                publishHTML (target : [allowMissing: false,
                                       alwaysLinkToLastBuild: true,
                                       keepAll: true,
                                       reportDir: 'mochawesome-report',
                                       reportFiles: 'output.html',
                                       reportName: 'End-to-End Test Reports',
                                       reportTitles: 'End-to-End Test Report'])
                cleanWs notFailBuild: true
            }
    }

}
